// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           Int            @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String         @unique
  password     String
  photo        String
  dateCreated  DateTime       @updatedAt
  phone_number String
  rooms        Rooms[]
  reservations Reservations[]
  reviews      Reviews[]
}

model Rooms {
  id              Int            @id @default(autoincrement())
  home_type       String
  room_type       String
  total_occupancy Int
  total_bedrooms  Int
  total_bathrooms Int
  summary         String
  address         String
  has_tv          Int
  has_kitchen     Int
  has_air_con     Int
  has_heating     Int
  has_Internet    Int
  price           Int
  published_at    DateTime       @updatedAt
  owner_id        Int
  created_at      DateTime       @updatedAt
  updated_at      DateTime       @updatedAt
  user            User           @relation(fields: [userId], references: [id])
  userId          Int
  reservations    Reservations[]
  reviews         Reviews[]
}

model Reservations {
  id         Int      @id @default(autoincrement())
  user_id    Int
  room_id    Int
  start_date DateTime @updatedAt
  end_date   DateTime @updatedAt
  price      Int
  total      Int
  created_at DateTime @updatedAt
  updated_at DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  rooms      Rooms    @relation(fields: [roomId], references: [id])
  roomId     Int
}

model Reviews {
  id             Int    @id @default(autoincrement())
  reservation_id Int
  rating         Int
  comment        String
  rooms          Rooms  @relation(fields: [roomId], references: [id])
  roomId         Int
  user           User   @relation(fields: [userId], references: [id])
  userId         Int
}
