// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           Int            @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String         @unique
  password     String
  photo        String
  dateCreated  String
  phone_number String
  rooms        Rooms[]
  reservations Reservations[]
  reviews      Reviews[]
}

model Owner {
  id        Int     @id @default(autoincrement())
  firstName String
  lastName  String
  rooms     Rooms[]
}

model Rooms {
  id              Int            @id @default(autoincrement())
  home_type       String
  room_type       String
  total_occupancy Int
  total_bedrooms  Int
  total_bathrooms Int
  address         String
  has_tv          Int
  has_kitchen     Int
  has_air_con     Int
  has_heating     Int
  has_Internet    Int
  price           Int
  photo           String
  published_at    String
  created_at      String
  stars           Int
  user            User           @relation(fields: [userId], references: [id])
  userId          Int
  owner           Owner          @relation(fields: [userId], references: [id])
  ownerId         Int
  reservations    Reservations[]
  reviews         Reviews[]
}

model Reservations {
  id         Int    @id @default(autoincrement())
  start_date String
  end_date   String
  price      Int
  total      Int
  created_at String
  updated_at String
  user       User   @relation(fields: [userId], references: [id])
  userId     Int
  rooms      Rooms  @relation(fields: [roomId], references: [id])
  roomId     Int
}

model Reviews {
  id      Int    @id @default(autoincrement())
  rating  Int
  comment String
  rooms   Rooms  @relation(fields: [roomId], references: [id])
  roomId  Int
  user    User   @relation(fields: [userId], references: [id])
  userId  Int
}
